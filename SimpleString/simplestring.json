{
  "swagger": "2.0",
  "x-ntx-render-version": 2,
  "info": {
    "version": "1.1.0",
    "title": "Rubens test Xtension - v2",
    "description": "Simple test Xtension v2"
  },
  "host": "pyro.prof-x.net:8888",
  "basePath": "/SimpleString/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/simplestring": {
      "post": {
        "summary": "Post a simple String",
        "parameters": [
          {
            "name": "simplestring",
            "x-ntx-summary": "My Simple String",
            "in": "body",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/simplestring2": {
      "post": {
        "operationId": "simplestring2",
        "summary": "Post a simple String in an object",
        "parameters": [
          {
            "name": "simplestring2",
            "x-ntx-summary": "My Simple String in the body",
            "in": "body",
            "schema": {
              "properties": {
                "MyString": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/simplestring3": {
      "post": {
        "operationId": "simplestring3",
        "summary": "Post a simple String (named utc) in an object",
        "parameters": [
          {
            "name": "utc",
            "x-ntx-summary": "My Simple String (named UTC) in the body",
            "in": "body",
            "schema": {
              "properties": {
                "utc": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/realexample": {
      "post": {
        "summary": "Bug report",
        "parameters": [
          {
            "name": "Body details",
            "x-ntx-summary": "",
            "in": "body",
            "schema": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "event": {
                  "x-ntx-summary": "",
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "start": {
                      "x-ntx-summary": "Start",
                      "type": "object",
                      "additionalProperties": false,
                      "properties": {
                        "utc": {
                          "x-ntx-summary": "Start UTC date/time",
                          "type": "string",
                          "default": "2021-07-26T10:00:00Z"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
